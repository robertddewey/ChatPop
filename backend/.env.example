# Django Settings
DJANGO_SECRET_KEY=your-secret-key-here
DEBUG=True

# ALLOWED_HOSTS and CORS_ALLOWED_ORIGINS configuration
# For LOCAL DEVELOPMENT ONLY (localhost):
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000,https://localhost:4000,https://127.0.0.1:4000
#
# For MOBILE/LAN TESTING (find your LAN IP with: ifconfig | grep "inet " | grep -v 127.0.0.1):
# ALLOWED_HOSTS=localhost,127.0.0.1,YOUR_LAN_IP
# CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000,http://YOUR_LAN_IP:4000,https://localhost:4000,https://127.0.0.1:4000,https://YOUR_LAN_IP:4000
#
# Example with LAN IP 192.168.1.100:
# ALLOWED_HOSTS=localhost,127.0.0.1,192.168.1.100
# CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000,http://192.168.1.100:4000,https://localhost:4000,https://127.0.0.1:4000,https://192.168.1.100:4000

# Default: localhost only (uncomment and modify for LAN access)
ALLOWED_HOSTS=localhost,127.0.0.1

# Database (PostgreSQL)
POSTGRES_DB=chatpop
POSTGRES_USER=chatpop_user
POSTGRES_PASSWORD=chatpop_pass
POSTGRES_HOST=localhost
POSTGRES_PORT=5435

# Redis
REDIS_HOST=localhost
REDIS_PORT=6381

# Django Server
DJANGO_PORT=9000

# CORS Settings (must include both HTTP and HTTPS for development)
CORS_ALLOWED_ORIGINS=http://localhost:4000,http://127.0.0.1:4000,https://localhost:4000,https://127.0.0.1:4000

# Stripe
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key

# Media Storage (AWS S3)
# Leave empty for local file storage, set for S3 storage
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_STORAGE_BUCKET_NAME=
AWS_S3_REGION_NAME=us-east-1
AWS_S3_CUSTOM_DOMAIN=
# If using CloudFront, set custom domain (e.g., d111111abcdef8.cloudfront.net)

# Frontend (Next.js)
NEXT_PUBLIC_API_URL=http://localhost:9000
NEXT_PUBLIC_WS_URL=ws://localhost:9000

# OpenAI (Photo Analysis)
OPENAI_API_KEY=sk-your-openai-api-key-here
